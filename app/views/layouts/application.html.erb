<!DOCTYPE html>
<html>
<head>
  <title>YourLocalPond</title>
  <% if !mobile_device? %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
  <% else %>
    <%= stylesheet_link_tag    "mobile", :media => "all" %>
  <% end %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"> 
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
</head>
<body>
<div id="header">
  <div id="header_logo">
  	<% if !mobile_device? %>
  		<%= link_to image_tag('yourlocalpond.png', :class=>'header_logo', :alt=>'YourLocalPond'), root_path%>
  	<% else %>
  		<%= link_to image_tag('yourlocalpond_small.png', :class=>'header_logo', :alt=>'YourLocalPond'), root_path%>
  	<% end %>
    <% if user_signed_in? %><%= link_to('Logout', destroy_user_session_path, :class=>'header_logout', :method => :delete) %><%end%>
  </div>
</div>


<%= yield %>

<%if Rails.env.production?%>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-32399355-1']);
  _gaq.push(['_setDomainName', 'yourlocalpond.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
<%end%>
</body>
</html>
